{{>header}}
<div id="wrapper">
    {{^verification}}
        {{#is_owner}}
            {{^show_secret}}
                <div class="alert alert-warning">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>{{i18n.COMMON.warning}}</strong> {{i18n.page.you_created_this_secret}}
                </div>
            {{/show_secret}}
            {{#show_secret}}
                <div class="alert alert-info">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    {{i18n.page.viewed_own_secret}}
                </div>
            {{/show_secret}}
        {{/is_owner}}
    {{/verification}}

    <div class="shared">
        {{^show_secret}}
            {{^has_passphrase}}
                {{#verification}}
                    <span class="pretext cufon">{{i18n.COMMON.click_to_verify}}</span><br/>
                {{/verification}}
                {{^verification}}
                    <!--span>{{i18n.COMMON.click_to_continue}}</span><br/-->
                {{/verification}}
            {{/has_passphrase}}
            {{#has_passphrase}}
                <h2 class="intro cufon">{{i18n.page.requires_passphrase}}</h2>
            {{/has_passphrase}}
            {{>partial/session_messages}}
            <div class="passphrase">
                <form method="POST">
                    {{{add_shrimp}}}
                    <input name="continue" type="hidden" value="true"/>
                    <fieldset class="fieldset">
                        <!--<legend>Legend</legend>-->
                        <div class="control-group">
                            {{#has_passphrase}}
                                <div class="controls">
                                    <input type="password" name="passphrase" id="passField" class="input-large" value=""
                                           placeholder="{{i18n.COMMON.enter_passphrase_here}}"/>
                                </div>
                            {{/has_passphrase}}
                        </div>
                        <div class="control-group">
                            <div class="controls">
                                <input class="btn" type="submit" id="btn-view" value="{{i18n.COMMON.view_secret}}">
                            </div>
                        </div>
                </form>
                {{^verification}}
                    <p class="lighter">({{i18n.COMMON.careful_only_see_once}})</p>
                {{/verification}}
            </div>
        {{/show_secret}}
        {{#show_secret}}
            <div class="secret">
                {{#verification}}
                    <span class="pretext">{{i18n.page.your_secret_message}}</span><br/>
                {{/verification}}
                {{^verification}}
                    <div class="pretext section-header">{{i18n.page.this_message_for_you}}</div>
                {{/verification}}
                <div class="padding-small">
                    <textarea class="textarea" readonly="readonly" rows="{{display_lines}}">{{secret_value}}</textarea>
                </div>
                {{^verification}}
                    <!--p class="lighter">({{i18n.COMMON.careful_only_see_once}})</p-->
                {{/verification}}

                {{#truncated}}
                    <div class="alert alert-info smaller">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>{{i18n.COMMON.warning}}</strong> {{i18n.page.secret_was_truncated}} {{secret_value.size.to_bytes}}
                        {{^authenticated}}<a href="/signup">{{i18n.COMMON.signup_for_more}}</a>.{{/authenticated}}
                    </div>
                {{/truncated}}

            </div>
        {{/show_secret}}
    </div>

    <section class="footer">
        <div>
            <p>Provided By: <a href="http://www.soundintheory.co.uk">Sound in Theory</a> | Powered By: <a
                    href="https://onetimesecret.com/">One Time Secret</a></p>
        </div>
    </section>
</div>